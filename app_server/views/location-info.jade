extends layout

include _includes/shareMixins
block content
   .row.page-header
      .col-lg-12.well.well-sm
         h1=pageHeader.title

   .row
      .col-xs-12.col-md-9
         .row
            .col-xs-12.col-sm-6
              p.rating
                  +outputRating(location.rating)

              p=location.address
              .panel.panel-primary
                .panel-heading
                  h2.panel-title=location.timings.title
                .panel-body
                  p=location.timings.openingHours
              .panel.panel-primary
                .panel-heading
                  h2.panel-title=location.menu.title
                .panel-body
                  each facility in location.menu.facilities
                    span.label.label-warning=facility
                     span.glyphicon.glyphicon-ok
                      | &nbsp;
                    | &nbsp;

            .col-xs-12.col-sm-6.location-map
                .panel.panel-primary
                  .panel-heading
                    h2.panel-title=location.locationTitle
                  .panel-body
                    img.img-responsive.img-rounded(src="http://maps.googleapis.com/maps/api/staticmap?center=Inorbit+Mall+Hyderabad&zoom=13&scale=false&size=600x450&maptype=roadmap&format=png&visual_refresh=true")
          .row
            .col-xs-12
               .panel.panel-primary.review-panel
                  .panel-heading
                     a.btn.btn-default.pull-right(href='/location-info/review')=location.reviewTitle
                     h2.panel-title=location.customerReviews
                  .panel-body
                     each user in users
                       .row
                         .review
                           .well.well-sm.review-header
                             span.rating
                                +outputRating(user.rating)
                             span.reviewAuthor=user.name
                             small.reviewTimeStamp=user.date
                            .col-xs-12
                              p=user.comment
